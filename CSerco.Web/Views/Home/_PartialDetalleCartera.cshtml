@model CSerco.Web.Models.CarteraVM

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="btn btn-close close" aria-label="Close"><span aria-hidden="true"></span></button>
        </div>
        <div class="modal-body">
            <div class="grid-containermodalsito">
                <div class="modalcuerpo">
                    <div class="row">
                        <center><h3>Datos de la Cuenta: </h3></center>
                        <hr />
                        <div class="col-sm-2 col-md-2 col-lg-2">
                            <label>Credito:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.NCredito
                            </div>
                        </div>
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label>Nombre Completo:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.Nombre
                            </div>
                        </div>
                        <div class="col-sm-6 col-md-6 col-lg-6">
                            <label>Dirección:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.Direccion
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Saldo Capital:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.SaldoK
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Adeudo total:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.MontVen
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Monto Moroso:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.InteresVen
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Dias Mora:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.DiasMora
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Ultimo Pago:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.FLastPay.ToShortDateString()
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Mes 3:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.Mes10
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Mes 2:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.Mes11
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Mes 1:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                $@Model.Mes12
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>REES:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.Rees
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>OID:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.OID
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Tel:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.Telefono
                            </div>
                        </div>
                        <div class="col-sm-3 col-md-3 col-lg-3">
                            <label>Correo:</label>
                            <div class="input-group mb-2 mr-sm-2 text-danger">
                                @Model.Correo
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <center>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-secondary CerrarModal">Cerrar</button>
            </div>
        </center>
    </div>
</div>
